@model IEnumerable<MvcExamenValen.Models.Personaje>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Personajes</h1>

<p>
    <a asp-controller="Personajes" asp-action="Create" class="btn btn-outline-success">Crear Personaje</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPersonaje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPersonaje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.Imagen)" alt="Imagen" style="width:150px;height:150px"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Serie)
            </td>
            <td>
                <a asp-controller="Personajes" asp-action="Edit" asp-route-id="@item.IdPersonaje" class="btn btn-outline-success">Editar Personaje</a>
                <a asp-controller="Personajes" asp-action="Details" asp-route-id="@item.IdPersonaje" class="btn btn-outline-info">Detalle Personaje</a>
                <a asp-controller="Personajes" asp-action="Delete" asp-route-id="@item.IdPersonaje" class="btn btn-outline-danger">Borrar Personaje</a>
            </td>
        </tr>
}
    </tbody>
</table>
